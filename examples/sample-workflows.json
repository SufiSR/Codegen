{
  "workflows": [
    {
      "name": "Plunet Customer Management",
      "description": "Create, search, and manage customers in Plunet",
      "workflow": {
        "nodes": [
          {
            "name": "Manual Trigger",
            "type": "n8n-nodes-base.manualTrigger",
            "position": [240, 300],
            "parameters": {}
          },
          {
            "name": "Create Customer",
            "type": "n8n-nodes-plunet.plunet",
            "position": [460, 300],
            "parameters": {
              "service": "customer",
              "operation": "insert",
              "customerData": {
                "name1": "Sample Customer Ltd",
                "email": "contact@sample.com",
                "phone": "+1-555-0123",
                "status": 1,
                "currency": "USD",
                "customerType": 1
              }
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Get Customer Details",
            "type": "n8n-nodes-plunet.plunet",
            "position": [680, 300],
            "parameters": {
              "service": "customer",
              "operation": "getCustomerObject",
              "customerID": "={{ $json.data.customerID }}"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          }
        ],
        "connections": {
          "Manual Trigger": {
            "main": [
              [
                {
                  "node": "Create Customer",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          },
          "Create Customer": {
            "main": [
              [
                {
                  "node": "Get Customer Details",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          }
        }
      }
    },
    {
      "name": "Plunet Order Processing",
      "description": "Create orders and track their status",
      "workflow": {
        "nodes": [
          {
            "name": "Schedule Trigger",
            "type": "n8n-nodes-base.scheduleTrigger",
            "position": [240, 300],
            "parameters": {
              "rule": {
                "interval": [
                  {
                    "field": "hours",
                    "hoursInterval": 1
                  }
                ]
              }
            }
          },
          {
            "name": "Get Active Orders",
            "type": "n8n-nodes-plunet.plunet",
            "position": [460, 300],
            "parameters": {
              "service": "order",
              "operation": "getAllOrderObjects",
              "additionalOptions": {
                "includeCompleted": false,
                "includeCancelled": false
              }
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Filter Overdue Orders",
            "type": "n8n-nodes-base.filter",
            "position": [680, 300],
            "parameters": {
              "conditions": {
                "dateTime": [
                  {
                    "value1": "={{ $json.data.deliveryDate }}",
                    "operation": "before",
                    "value2": "={{ $now }}"
                  }
                ]
              }
            }
          },
          {
            "name": "Send Slack Alert",
            "type": "n8n-nodes-base.slack",
            "position": [900, 300],
            "parameters": {
              "channel": "#project-management",
              "text": "⚠️ Overdue Order Alert: Order #{{ $json.data.orderID }} ({{ $json.data.orderName }}) was due on {{ $json.data.deliveryDate }}"
            },
            "credentials": {
              "slackApi": "Slack API Credentials"
            }
          }
        ],
        "connections": {
          "Schedule Trigger": {
            "main": [
              [
                {
                  "node": "Get Active Orders",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          },
          "Get Active Orders": {
            "main": [
              [
                {
                  "node": "Filter Overdue Orders",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          },
          "Filter Overdue Orders": {
            "main": [
              [
                {
                  "node": "Send Slack Alert",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          }
        }
      }
    },
    {
      "name": "Plunet Authentication Test",
      "description": "Test Plunet API authentication and get system information",
      "workflow": {
        "nodes": [
          {
            "name": "Manual Trigger",
            "type": "n8n-nodes-base.manualTrigger",
            "position": [240, 300],
            "parameters": {}
          },
          {
            "name": "Login to Plunet",
            "type": "n8n-nodes-plunet.plunet",
            "position": [460, 200],
            "parameters": {
              "service": "auth",
              "operation": "login"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Get Plunet Version",
            "type": "n8n-nodes-plunet.plunet",
            "position": [460, 300],
            "parameters": {
              "service": "auth",
              "operation": "getPlunetVersion"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Get API Version",
            "type": "n8n-nodes-plunet.plunet",
            "position": [460, 400],
            "parameters": {
              "service": "auth",
              "operation": "getVersion"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Validate Session",
            "type": "n8n-nodes-plunet.plunet",
            "position": [680, 250],
            "parameters": {
              "service": "auth",
              "operation": "validate",
              "uuid": "={{ $node['Login to Plunet'].json.uuid }}"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          },
          {
            "name": "Logout",
            "type": "n8n-nodes-plunet.plunet",
            "position": [900, 250],
            "parameters": {
              "service": "auth",
              "operation": "logout",
              "uuid": "={{ $node['Login to Plunet'].json.uuid }}"
            },
            "credentials": {
              "plunetApi": "Plunet API Credentials"
            }
          }
        ],
        "connections": {
          "Manual Trigger": {
            "main": [
              [
                {
                  "node": "Login to Plunet",
                  "type": "main",
                  "index": 0
                },
                {
                  "node": "Get Plunet Version",
                  "type": "main",
                  "index": 0
                },
                {
                  "node": "Get API Version",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          },
          "Login to Plunet": {
            "main": [
              [
                {
                  "node": "Validate Session",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          },
          "Validate Session": {
            "main": [
              [
                {
                  "node": "Logout",
                  "type": "main",
                  "index": 0
                }
              ]
            ]
          }
        }
      }
    }
  ]
}

